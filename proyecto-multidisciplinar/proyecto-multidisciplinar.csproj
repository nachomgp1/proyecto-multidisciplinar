<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RootNamespace>proyecto_multidisciplinar</RootNamespace>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="view\**" />
    <Compile Include="view\ViewFtpAdmin.xaml.cs" />
    <Compile Include="view\ViewFtpUser.xaml.cs" />
    <EmbeddedResource Remove="view\**" />
    <None Remove="view\**" />
    <Page Remove="view\**" />
    <Page Include="view\ViewFtpAdmin.xaml" />
    <Page Include="view\ViewFtpUser.xaml" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="images\imagedef.jpg" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="controller\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Npgsql" Version="9.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="images\imagedef.jpg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
